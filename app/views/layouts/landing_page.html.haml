!!!
%html
  %head
    %title= "Visitorr"
    = stylesheet_link_tag :application
    = javascript_include_tag "https://js.stripe.com/v1/"
    = javascript_tag "Stripe.publishableKey = '#{STRIPE_PUBLIC_KEY}';";
    = javascript_include_tag :application
    = csrf_meta_tag

  %body{ :id => "#{params[:controller].parameterize}"  }
    .topbar
      .navcontainer
        %h3= link_to image_tag('logo1.png'), root_path
        %ul.nav
          - if current_user
            %li= link_to "Visitors", admin_path
            %li= link_to "Profile", profile_path(current_user)
            %li= link_to "Settings", settings_path
            %li= link_to "Sign Out", sign_out_path
          - else
            %li= link_to "Get Started", get_started_path
            %li= link_to "How It Works", hiw_path
            %li= link_to "Contact Us", contact_us_path
            %li= link_to "Sign In", sign_in_path

    #header
      .headercontainer
        #headtext
          %h2 
          %h4 
          %p  
          %p= link_to image_tag("iphone4.png"), get_started_path, :class => "getstarted"
        #headimg
          %span
            %iframe{:allowFullScreen => "", :frameborder => "0", :height => "281", :mozallowfullscreen => "", :src => "http://player.vimeo.com/video/33996675?title=0&byline=0&portrait=0", :webkitAllowFullScreen => "", :width => "430"}
        #headimg
    .container
      .main
        .row
          .span6.columns
            - if flash.notice
              #notice.alert-message.block-message.success= flash.notice
        = yield
        
        #imagecontainer
          .imagebox
            = image_tag("assimilation.png")
          .imagebox
            = image_tag("connect.png")
          .imagebox
            = image_tag("growth.png")   
            

  = render "layouts/footer"
                        


